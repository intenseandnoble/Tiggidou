
<a href="#" class="modal" id="myTravels" aria-hidden="true">
</a>
<div class="modal-dialog">

    <div class="modal-header">
        <a href="#" class="btn-close" aria-hidden="true">&#215;</a>
        <h2><%= profile.popUpTitle %></h2>
        <%= profile.moreOptions %>
        <br>
    </div>
    <div class="modal-header">
        <h1><%= profile.travelOffers %></h1>
        <%  //AFFICHAGE des VOYAGES en tant que CONDUCTEUR
        if (travelsAsDriver != undefined && travelsAsDriver.length != 0 ) {
            var limitLoop = Math.min(5, travelsAsDriver.length);
            for (i=0; i<limitLoop; ++i) { %>

                <%= travelsAsDriver[i]['idAddTravel'] %>
                <%= travelsAsDriver[i]['cost'] %> $

                <%= travelsAsDriver[i]['departureDate'] %><br>
                <%= travelsAsDriver[i]['departureTime'] %><br>
                <%= travelsAsDriver[i]['startAddress'] %> → <%= travelsAsDriver[i]['destinationAddress'] %><br>
                <%= profile.seatsTaken %> <%= travelsAsDriver[i]['takenSeat'] %> <br>
                <%= profile.availableSeats %> <%= travelsAsDriver[i]['availaableSeat'] %><br>
                <% if (travelsAsDriver[i]['petsAllowed'] == 0){ %>
                <%= profile.availableSeats %><%= profile.no %><br>
                <%} else { %>
                <%= profile.availableSeats %><%= profile.yes %> <br>
                <% } %>

                <hr>

        <%  }
            if (travelsAsDriver.length >= 6) { %>
            <a> <%= profile.maxNbResulstsTravelsDriver%> </a>
        <%    }
        } else { %>
            <p><%= profile.noTravelsAsDriver %></p>
        <% } %>

        <h1><%= profile.travelDemands %></h1>
        <%
        //AFFICHAGE des VOYAGES en tant que PASSAGERS
            if (travelsAsPassenger != undefined && travelsAsPassenger.length != 0) {
                var limitLoop = Math.min(5, travelsAsPassenger.length);
            for (i=0; i<limitLoop; ++i) { %>

                <%= travelsAsPassenger[i]['idSearchTravel'] %>
                <%= travelsAsPassenger[i]['departureDate'] %><br>
                <%= travelsAsPassenger[i]['departureTime'] %><br>
                <%= travelsAsPassenger[i]['startAddress'] %> → <%= travelsAsPassenger[i]['destinationAddress'] %><br>
                <%= profile.seatsTaken %> <%= travelsAsPassenger[i]['takenSeat'] %> <br>
                <%= profile.availableSeats %> <%= travelsAsPassenger[i]['availaableSeat'] %><br>
                <% if (travelsAsPassenger[i]['pets'] == 0){ %>
                <%= profile.availableSeats %><%= profile.no %><br>
                <%} else { %>
                <%= profile.availableSeats %><%= profile.yes %> <br>
                <% } %>

                <hr>

        <%  }
            if (travelsAsPassenger.length >= 6) { %>
                <a> <%= profile.maxNbResulstsTravelsPassenger%> </a>
        <%    }
            } else { %>
                <p><%= profile.noTravelsAsPassenger %></p>
        <% } %>

    </div>
</div>