<html>
<head>
    <% include ../partials/head %>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var elements = document.getElementsByTagName("INPUT");
            for (var i = 0; i < elements.length; i++) {
                elements[i].oninvalid = function(e) {
                    e.target.setCustomValidity("");
                    if (!e.target.validity.valid) {
                        e.target.setCustomValidity("<%= login.emptyInput %>");
                    }
                };
                elements[i].oninput = function(e) {
                    e.target.setCustomValidity("");
                };
            }
        })
    </script>
</head>
<body class="no-sidebar">
<div id="page-wrapper">

    <!-- Header -->
    <% include ../partials/header %>

    <!-- Main -->
    <div class="box container">
        <div class="content-wrapper-2-columns-login clearfix">
            <div class="left">
                <h2><%= login.loginLabel %></h2>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- Content  onsubmit="return validateForm()"-->
                <form action = "/login" method="post" name="loginForm">
                    <input type="email" class="signin-email"  name = "email" placeholder ="<%= login.email %>"
                           required="required"><br>
                    <input type="password" class="enter-password" name = "password" placeholder="<%= login.pwd %>"
                           required="required"><br>
                    <a class="forgot-password" href="password-recovery.html"><%= login.pwdForgot %></a><br>
                    <button type="submit" class="sign-in"><%= login.connection%></button><br>
                </form>
            </div>
            <div class="right">
                <form class="sign-in-social-media">
                    <a href="/auth/facebook" >
                        <img class="logo-social-media" src="<%= login.facebookSignin%>">
                    </a>
                </form>
                <form class="sign-in-social-media">
                    <a href="/auth/google" >
                        <img class="logo-social-media" src="<%= login.googleSignin%>">
                    </a>
                </form>
            </div>
        </div>
    </div>



    <!-- Footer -->
    <% include ../partials/footer %>

</div>
</body>
</html>