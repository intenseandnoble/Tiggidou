<html>
<head>
    <% include ../partials/head %>
</head>
<body class="no-sidebar">
<div id="page-wrapper">

    <!-- Header -->
    <% include ../partials/header %>

    <!-- Main -->
    <div class="box container">
        <div class="content-wrapper-2-columns-login clearfix">
            <div class="left">
                <h2><%= login.loginLabel %></h2>
                <!-- Content -->
                <form action = "/login" method="post">
                    <input type="email" class="signin-email"  name = "email" placeholder ="<%= login.email %>"><br>
                    <input type="password" class="enter-password" name = "password" placeholder="<%= login.pwd %>"><br>
                    <a class="forgot-password" href="password-recovery.html"><%= login.pwdForgot %></a><br>
                    <button type="submit" class="sign-in"><%= login.connection%></button><br>
                </form>
            </div>
            <div class="right">
                <form class="sign-in-social-media">
                    <a href="/auth/facebook" >
                        <img class="logo-social-media" src="<%= login.facebookSignin%>">
                    </a>
                </form>
                <form class="sign-in-social-media">
                    <a href="/auth/google" >
                        <img class="logo-social-media" src="<%= login.googleSignin%>">
                    </a>
                </form>
            </div>
        </div>
    </div>



    <!-- Footer -->
    <% include ../partials/footer %>

</div>
</body>
</html>