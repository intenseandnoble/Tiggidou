<!DOCTYPE HTML>

<html>
<head>
    <% include ../partials/head %>

</head>

<body class="homepage">
<div id="page-wrapper">

    <!-- Header -->
    <% include ../partials/header %>

    <!-- Main -->
    <div id="main-wrapper">
        <div class="container">
            <div class="row 200%">
                <div class="4u 12u$(medium)">
                    <div id="sidebar">

                        <!-- Sidebar -->
                        <section>
                            <h3><%= profile.profile %></h3>
                            <% { %>
                            <div class="image">
                                <img src="images/pic01.jpg"/>
                            </div>
                            <% }
                            if (age != null) { %>
                            <h3><%= profile.age %>  </h3>
                            <% }
                            if (education != null ) { %>
                            <h3><%= profile.education %>  </h3>
                            <% }
                            if (music != null) { %>
                            <h3><%= profile.music %>  </h3>
                            <% }
                            { %>
                            <footer>
                                <a href="#" class="button icon fa-info-circle"><%= profile.contacts %></a>
                            </footer>
                            <% } %>
                        </section>

                        <section>
                            <h3>Subheading</h3>
                            <ul class="style2">
                                <li><a href="#tabs-1">Tableau de bord</a></li>
                                <li><a href="#tabs-2">Annonces</a></li>
                                <li><a href="#tabs-3">RÃ©servation</a></li>
                                <li><a href="#tabs-4">Messages</a></li>
                                <li><a href="#tabs-5">...</a></li>
                            </ul>
                        </section>

                    </div>
                </div>
                <div class="8u 12u$(medium) important(medium)">
                    <div id="content">

                        <!-- Content -->
                        <article>

                            <h2><%= userName %></h2>
                            <% if (anecdote != null) { %>
                            <p><%= anecdote %></p>
                            <% }
                            if (goalInLife != null) { %>
                            <h3><%= goalInLife %></h3>
                            <p><%= goalInLife %></p>
                            <% } %>

                        </article>

                        <% include ../partials/userScores %>

                        <br>
                        <div class="row-comments">
                            <div class="column-comments">
                                <div class="panel">
                                    <div class="panel-heading">Comments</div>
                                    <div class="panel-body">


                                        <form id="write_comment" class="form-horizontal" method="post" action ="/post_profile_comment">
                                            <div class="form-group">
                                                <div class="col-md-6">
                                                    <input type="text" name="name" id="name" class="form-control" placeholder="Name">
                                                </div><!--col-md-6-->
                                                <div class="col-md-6">
                                                    <input type="email" name="mail" id="mail" class="form-control" placeholder="E-mail">
                                                </div><!--col-md-6-->
                                            </div><!--form-group-->

                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <textarea name="comment" rows="3" class="form-control input-md" placeholder="Add a comment"></textarea>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <!--col-md-5-->
                                                <div class="col-md-5">
                                                    <input type="submit" class="button" value="Submit"/>
                                                </div><!--col-md-5-->

                                            </div>
                                        </form>


                                    </div><!--panel-body class="meta clearfix"  -->


                                    <ul class="list-group">

                                        <% if (comments.length > 1 ) {
                                        for (var i =0; i<comments.length; i+=2) { %>
                                        <li class="list-group-item">
                                            <hr>
                                            <p >
                                                <a href="#"  title="NAME" class="user"><%= comments[i+1] %></a>
                                            </p>
                                            <p class="comment">
                                            <p> <%= comments[i] %> </p>
                                            </p>
                                        </li>

                                        <% }
                                        } %>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <% include ../partials/footer %>

</div>
</body>
</html>